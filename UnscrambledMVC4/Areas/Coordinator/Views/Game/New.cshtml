@model Unscrambled.Areas.Coordinator.Models.ViewModels.NewGameViewModel

@{
    ViewBag.Title = "NewGame";
}

<h2>Create New Game</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Game.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Game.Name)
            @Html.ValidationMessageFor(model => model.Game)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Game.JoinCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Game.JoinCode)
            @Html.ValidationMessageFor(model => model.Game.JoinCode)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.GameTypeID, "GameType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("GameTypeID", "Select One")
            @Html.ValidationMessageFor(model => model.Game)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Game.IsHandicapped)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Game.IsHandicapped)
            @Html.ValidationMessageFor(model => model.Game.IsHandicapped)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Game.NumberOfRounds)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Game.NumberOfRounds)
            @Html.ValidationMessageFor(model => model.Game.NumberOfRounds)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
