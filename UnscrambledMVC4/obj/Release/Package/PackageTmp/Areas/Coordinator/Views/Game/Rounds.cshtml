@model Unscrambled.Domain.Game

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>


<p>
    @Html.ActionLink("Create New", "CreatePlayer", new { id = Model.ID })
</p>


<table>
    <tr>
        <th>
            Round #
        </th>
        <th>
            Holes
        </th>
        <th></th>
    </tr>

@foreach (var round in Model.Rounds) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => round.RoundNumberInGame)
        </td>
        <td>
            @Html.DisplayFor(modelItem => round.HolesInRound)
        </td>
         <td>
            @Html.ActionLink("Edit", "EditRound", new { id=round.ID }) |
            @Html.ActionLink("Delete", "DeleteRound", new { id=round.ID })
        </td>
    </tr>
}
</table>